<!DOCTYPE html>
<html>
  <head>
    <title>Reservation</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul>
        <li><%= link_to t('button.top'), root_path %></li>
        <li><%= link_to t('message.register', model: User.model_name.human),
                new_user_path %></li>
        <li><%= link_to t('button.login'), new_auth_path %></li>
      </ul>
    </header>
    <hr>
    <div class="container">
    <%= yield %>
    </div>
    <hr>
    <footer>
      <p>2020 Copyright </p>
    </footer>
  </body>
</html>
