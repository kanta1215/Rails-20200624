<!DOCTYPE html>
<html>
  <head>
    <title>Reservation</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul>
        <li><%= link_to t('button.top'), root_path %></li>
        <% if current_user.admin %>
        <li><%= link_to t('message.register', model: Room.model_name.human),
                new_room_path %></li>
        <% end %>
        <li><%= link_to t('message.list', model: Room.model_name.human),
                rooms_path %></li>
        <li><%= link_to t('button.logout'), new_auth_path, method: :delete %></li>
      </ul>
    </header>
    <hr>
    <div class="container">
    <%= yield %>
    </div>
    <hr>
    <footer>
      <p>2020 Copyright </p>
    </footer>
  </body>
</html>
