<table>
  <thead>
    <tr>
      <th>利用者</th>
      <th>メールアドレス</th>
      <th>予約日</th>
      <th>利用時間</th>
      <th>人数</th>
      <th colspan="1"></th>
    </tr>
  </thead>

　<tbody>
    <% @room.entries.each do |entry| %>
      <tr>
        <td><%= entry.user.name %></td>
        <td><%= entry.user.email %></td> 
        <td><%= entry.reserved_date %></td> 
        <td><%= entry.usage_time %></td> 
        <td><%= entry.people %></td>
        <td><% if current_user == entry.user %>
            <%= link_to t('button.cancel'), entry, method: :delete, remote: true,
                data: { confirm: t('message.cancel_confirm', model: Entry.model_name.human) },
                class: "button_cancel" %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
